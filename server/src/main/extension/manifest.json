{
  "manifest_version": 2,
  "name": "Calendue",
  "version": "1.0",

  "description": "Send course and assignment data to Calendue.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "js": ["content_scripts/calendue.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon-36.png",
    "default_title": "Calendue",
    "default_popup": "popup/add-course.html"
  }
}